<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="de.po.mobile.note"
      android:versionCode="2"
      android:versionName="0.1.1">
    <uses-sdk android:minSdkVersion="4" />

    <application android:icon="@drawable/text" android:label="@string/app_name" android:name="ShareNoteApp">
        <activity android:name="ShareNoteList"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="ShareNoteEdit"
                  android:label="@string/app_name" android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>
    </application>
</manifest>