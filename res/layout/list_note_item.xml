<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="?android:attr/listPreferredItemHeight"
	android:padding="6dip">
	<ImageView android:id="@+id/icon" android:layout_width="wrap_content"
		android:layout_height="fill_parent" android:layout_alignParentTop="true"
		android:layout_alignParentBottom="true" android:layout_marginRight="6dip"
		android:src="@drawable/text" />

	<TextView android:id="@+id/firstLine" android:layout_width="fill_parent"
		android:layout_height="26dip" android:layout_toRightOf="@id/icon"
		android:layout_alignParentTop="true" android:layout_alignParentRight="true"
		android:singleLine="true" android:ellipsize="marquee" android:text="My Application" />

	<LinearLayout android:layout_below="@id/firstLine"
		android:layout_alignParentBottom="true" android:layout_width="fill_parent"
		android:layout_height="26dip" android:layout_toRightOf="@id/icon">
		<TextView android:id="@+id/secondLine1" android:singleLine="true"
			android:ellipsize="marquee" android:textStyle="italic" android:text="second Line1"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_weight=".5"  android:textColor="@android:color/secondary_text_dark" />

		<TextView android:id="@+id/secondLine2" android:singleLine="true"
			android:ellipsize="marquee" android:gravity="right"
			android:textStyle="italic" android:text="second Line1"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_weight=".5" android:textColor="@android:color/secondary_text_light" />
	</LinearLayout>


</RelativeLayout>
